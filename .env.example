# Environment Variables for Certificate Generator
# Copy this file to .env and update with your actual values

# Admin Credentials (REQUIRED)
ADMIN_USER=admin
ADMIN_PASS=your-secure-password-here

# Server Configuration (REQUIRED)
PORT=3000
SESSION_SECRET=your-super-secret-session-key-here

# Application Settings (OPTIONAL)
APP_NAME=Certificate Generator
NODE_ENV=development

# MongoDB Configuration (REQUIRED for production)
MONGODB_URI=mongodb://localhost:27017/certificate_generator
# For MongoDB Atlas (cloud): mongodb+srv://username:password@cluster.mongodb.net/certificate_generator
